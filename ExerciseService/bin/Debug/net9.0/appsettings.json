{
  "RabbitMQ": {
    "Host": "localhost",
    "Exchange": "speech_exchange",
    "AudioRoutingKey": "exercise.audio.new",
    "ResultRoutingKey": "speech.result.done",
    "UserName": "guest",
    "Password": "guest"
  },

  "Services": {
    "ProgressServiceUrl": "http://localhost:5014"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "exercise_log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
