{
  "RabbitMQ": {
    "Host": "localhost",
    "Exchange": "speech_exchange",
    "AudioRoutingKey": "exercise.audio.*",
    "ResultRoutingKey": "speech.result.done",
    "UserName": "guest",
    "Password": "guest"
  },

  "AzureSpeech": {
    "Region": "westeurope",
    "Language": "uk-UA"
  },

  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "speechai_log.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  }
}
